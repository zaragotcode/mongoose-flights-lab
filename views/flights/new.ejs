<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">

    <label for="airline-input">Airline:</label>
    <input required type="text" name="airport" id="airput-input">

    <label for="airport-name">Airport:</label>
    <select name="airportName" id="airport-name">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>

    <label for="flight-no-input">Flight #:</label>
    <input type="number" name="flightNo" id="flight-no-input">

    <label for="departure-date">Departure Date:</label>
    <input type="date">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include('../partials/footer') %> 